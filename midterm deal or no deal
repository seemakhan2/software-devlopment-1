        System.out.println("enter the next case you'd like to open");
        System.out.println("or enter '0' to end the game");

        //round 1
        for (int i = 0; i <= 6; i++) {
            System.out.println("choose your case");
            int userInput = sc.nextInt();
            if (BlackList.contains(userInput)) {
                System.out.print("pick another case");
                i--;
            } else {
                System.out.println("you picked" + " " + (userInput));
                remCases--;
                //if blacklist.contains(userInput){
                //print the value of the case cases[input-1]
                //both faces and cases
                // System.out.println(gameFaces[userInput - 1]);
                System.out.println(gameCases[userInput - 1]);
                //gamecases: replace index with 0
                gameCases[userInput - 1] = 0;
                BlackList.add(userInput);

            }
        }
        int sum = 0;
        for (int i = 0; i < gameCases.length; i++) {
            sum += (gameCases[i]);

        }
        System.out.println(sum / remCases);

        System.out.println("do you want to take the bankers offer?");
        sc.nextLine();
        String userInput2 = sc.nextLine();
        if (userInput2.equals("yes")) {
            System.exit(0);
        } else {

        }
