
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Hello, my name is Seema and I'm majoring in IT");
        System.out.println("What is your name?");
        String username = sc.nextLine();
        System.out.println("Hello," + (username));
        System.out.println("We will be playing a brief math quiz");

        System.out.println("What is 5 x 4?");
        int Score =0;
        int answer1 = sc.nextInt();
        if (answer1 == 20) {
            System.out.println("Correct!");
            Score = Score +1;
        }else {
            System.out.println("Incorrect");
        }
        System.out.println("What is 9 x 8?");
        int answer2 = sc.nextInt();
        if (answer2 == 72) {
            System.out.println("Correct!");
            Score = Score +1;
        }else {
            System.out.println("Incorrect");
        }
        System.out.println("What is 10/2?");
            int answer3 = sc.nextInt();
            if (answer3 == 5) {
                System.out.println("Correct!");
                Score = Score +1;
            }else {
                System.out.println("Incorrect");
            }
        System.out.println("you got" + " " + (Score) + "/3");



    }
}

